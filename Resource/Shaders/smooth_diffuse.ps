#version 330

// Note: no input in this shader, it just outputs the colour of all fragments, in this case set to red (format: R, G, B, A).
in vec3 position;
in vec3 normal;
in vec4 color;

out vec4 FragColor;

// light
uniform vec3 ambientLight;
uniform vec3 lightPosition;

void main()
{
	vec3 vertex2LightVector = normalize(lightPosition - position);
	vec4 diffuseReflection = color * max(0.0, dot(vertex2LightVector, normal));
	FragColor = diffuseReflection + vec4(ambientLight, 1.0);
}